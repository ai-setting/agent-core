{
  "name": "agent-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@latest",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/core dev",
    "build": "bun run --cwd packages/core build",
    "build:binary": "bun run --cwd packages/core build:binary",
    "build:binary:single": "bun run --cwd packages/core build:binary:single",
    "build:release": "bun run --cwd packages/core build:release",
    "start": "bun run --cwd packages/core start",
    "run": "bun run --cwd packages/core run",
    "attach": "bun run --cwd packages/core attach",
    "test": "bun run --cwd packages/core test",
    "typecheck": "bun run --cwd packages/core typecheck"
  },
  "devDependencies": {
    "typescript": "latest"
  }
}
